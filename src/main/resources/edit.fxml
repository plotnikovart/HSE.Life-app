               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="gr" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="deleteFlag" mnemonicParsing="false" text="Удалить" toggleGroup="$gr">
               <HBox.margin>
                  <Insets left="20.0" top="20.0" />
               </HBox.margin>
            </RadioButton>
         </children>
