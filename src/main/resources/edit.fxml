      </TextField>
      <Label text="Описание">
         <VBox.margin>
            <Insets left="20.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextArea fx:id="description" minWidth="150.0" prefHeight="96.0" prefWidth="600.0" wrapText="true" VBox.vgrow="ALWAYS">
